<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <me.dm7.barcodescanner.zbar.ZBarScannerView
        android:id="@+id/fragment_newapplication_barcodescanner"
        android:layout_width="300dp"
        android:layout_height="400dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="?android:attr/dividerHorizontal"/>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="0dip"
        android:measureWithLargestChild="true">

        <Button
            android:id="@+id/fragment_newapplication_cancel"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="0dip"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/common_cancel"/>

        <Button
            android:id="@+id/fragment_newapplication_noqr"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="0dip"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/dialog_newapplication_noQRButton"/>

    </LinearLayout>

</LinearLayout>