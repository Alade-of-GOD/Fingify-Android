<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:minHeight="60dp"
    android:mode="twoLine">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:id="@+id/application_item_label"
        android:text="Some Text"
        android:textColor="@android:color/primary_text_light"
        android:textSize="20sp"
        android:layout_marginTop="10dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:id="@+id/application_item_code"
        android:textSize="14sp"
        android:text="The code"
        android:textColor="@android:color/secondary_text_light"
        android:layout_below="@+id/application_item_label" />

    <com.fwest98.fingify.CustomUI.ProgressWheel
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:circleColor="#AAA"
        app:progress="60"
        android:id="@+id/application_item_wheel"/>

</RelativeLayout>