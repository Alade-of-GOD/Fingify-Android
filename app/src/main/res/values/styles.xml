<resources>
    <style name="AppTheme" parent="android:Theme.DeviceDefault.Light">
    </style>

    <!-- Preference Theme -->
    <style name="PreferenceTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/BackActionBar</item>
    </style>

    <style name="BackActionBar" parent="android:Widget.DeviceDefault.Light.ActionBar">
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
    </style>

    <!-- DialogActivities -->
    <style name="DialogAcitivity" parent="android:Theme.DeviceDefault">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowActionModeOverlay">true</item>
    </style>
</resources>
